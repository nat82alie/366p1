<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
    <managed-bean>
        <managed-bean-name>selector</managed-bean-name>
        <managed-bean-class>Selector</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>util</managed-bean-name>
        <managed-bean-class>Util</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>customer</managed-bean-name>
        <managed-bean-class>Customer</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
        <managed-property>
            <property-name>login</property-name>
            <value>#{login}</value>
        </managed-property>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>employee</managed-bean-name>
        <managed-bean-class>Employee</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
        <managed-property>
            <property-name>login</property-name>
            <value>#{login}</value>
        </managed-property>
    </managed-bean>      
    <managed-bean>
        <managed-bean-name>login</managed-bean-name>
        <managed-bean-class>Login</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>  
    <navigation-rule>
        <from-view-id>
            /index.xhtml
        </from-view-id>
        <navigation-case>
            <from-outcome>success</from-outcome>
            <to-view-id>/start.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule> 
    <navigation-rule>
        <from-view-id>
            /start.xhtml
        </from-view-id>
        
        <navigation-case>
            <from-outcome>changePwd</from-outcome>
            <to-view-id>/changePwd.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>roomPrices</from-outcome>
            <to-view-id>/showRoomPrices.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>changeRoomPrices</from-outcome>
            <to-view-id>/changeRoomPrices.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>addEmpl</from-outcome>
            <to-view-id>/addEmployee.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>deleteEmpl</from-outcome>
            <to-view-id>/deleteEmployee.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>addCustomer</from-outcome>
            <to-view-id>/addCustomer.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>deleteCustomer</from-outcome>
            <to-view-id>/deleteCustomer.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>checkInCustomer</from-outcome>
            <to-view-id>/checkInCustomer.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>checkOutCustomer</from-outcome>
            <to-view-id>/checkOutCustomer.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>addCharges</from-outcome>
            <to-view-id>/addCharges.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>viewReservation</from-outcome>
            <to-view-id>/viewReservation.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>createReservation</from-outcome>
            <to-view-id>/createReservation.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>cancelReservation</from-outcome>
            <to-view-id>/cancelReservation.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>checkYourReservations</from-outcome>
            <to-view-id>/checkYourReservations.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>createYourReservation</from-outcome>
            <to-view-id>/createYourReservation.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>cancelYourReservation</from-outcome>
            <to-view-id>/cancelYourReservation.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>showAllCustomers</from-outcome>
            <to-view-id>/showAllCustomers.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule> 
        <from-view-id>
            /addEmployee.xhtml
        </from-view-id>
        <navigation-case>  
            <from-outcome>main</from-outcome>
            <to-view-id>/start.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
